# Environment Variables for Anchor Agent

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=600
OPENAI_TEMPERATURE=0.3
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY_MS=500
LLM_MAX_CONTEXT_CHARS=8000

# Cost Controls
OPENAI_MONTHLY_LIMIT=100
OPENAI_PER_REQUEST_LIMIT=0.10

# Optional: Organization ID (if using organizational account)
# OPENAI_ORG_ID=org-xxxxx

# Server Configuration
PORT=8787
NODE_ENV=development

# Feature Flags
ENABLE_LLM=true
ENABLE_PHI_AUDIT=true
ENABLE_DEMO_MODE=false
