{
  "manifest_version": 3,
  "name": "AssistMD Ghost Overlay (MVP)",
  "version": "0.0.2",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AssistMD Ghost Overlay"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "overlay.js",
        "domMapper.js",
        "anchorApi.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
